<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AddActivity">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                app:tint="@color/main_color" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Add New Flower"
            android:textColor="@color/main_color"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:id="@+id/rlAdd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <RelativeLayout
                        android:id="@+id/rlGone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/ivAdd"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_baseline_add_24"
                            app:tint="@color/main_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivAdd"
                            android:layout_centerHorizontal="true"
                            android:text="Pick Image"
                            android:textColor="@color/main_color"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/flowerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_items"
                android:hint="Enter flower name"
                android:inputType="text"
                android:padding="14dp"
                android:singleLine="true"
                android:textColorHint="@color/main_color"
                android:textSize="16sp"
                android:textColor="@color/main_color"/>
            <EditText
                android:id="@+id/flowerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_items"
                android:hint="Enter flower type"
                android:inputType="text"
                android:padding="14dp"
                android:singleLine="true"
                android:textColorHint="@color/main_color"
                android:textSize="16sp"
                android:textColor="@color/main_color"/>
            <EditText
                android:id="@+id/flowerSeason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_items"
                android:hint="Enter planting season"
                android:inputType="text"
                android:padding="14dp"
                android:singleLine="true"
                android:textColorHint="@color/main_color"
                android:textSize="16sp"
                android:textColor="@color/main_color"/>
            <EditText
                android:id="@+id/flowerGrowthRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_items"
                android:hint="Enter growth rate"
                android:inputType="number"
                android:padding="14dp"
                android:singleLine="true"
                android:textColorHint="@color/main_color"
                android:textSize="16sp"
                android:textColor="@color/main_color"/>
            <EditText
                android:id="@+id/flowerMethodOfCare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:background="@drawable/bg_items"
                android:hint="Enter method of care"
                android:inputType="textMultiLine"
                android:minHeight="70dp"
                android:padding="14dp"
                android:singleLine="true"
                android:textColorHint="@color/main_color"
                android:textSize="16sp"
                android:textColor="@color/main_color"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add"
                android:layout_below="@+id/password"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/bg_buttons"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="12dp"
                android:text="Add"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="normal" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>